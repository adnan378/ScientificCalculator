<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/output"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"

        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nums"
        android:paddingHorizontal="10dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />
    <LinearLayout android:id="@+id/nums" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:orientation="horizontal" android:paddingTop="20dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical">

            <Button
                android:id="@+id/on"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="ON"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btn7"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="7"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn4"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="4"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn1"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="1"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/percent"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="%"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical">

            <Button
                android:id="@+id/off"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="OFF"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn8"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="8"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn5"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="5"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn2"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="2"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn0"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical">

            <Button
                android:id="@+id/clear"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="AC"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn9"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="9"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn6"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="6"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn3"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnDot"
                style="@style/Button2"
                android:backgroundTint="@color/white"
                android:text="."
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical">

            <Button
                android:id="@+id/division"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="/"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/multiplication"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="X"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/subtraction"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="-"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/addition"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="+"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/equal"
                style="@style/Button1"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>